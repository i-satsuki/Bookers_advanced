<% if @user.id == current_user.id %>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md- offset-3">
				<h2>Editing Book</h2>
				<%= form_for(@book) do |f| %>
					<% if @book.errors.any? %>
					    <div id="error_explanation">
				          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
				          <ul>
				          <% @book.errors.full_messages.each do |message| %>
				                <li><%= message %></li>
				          <% end %>
				          </ul>
					    </div>
					<% end %>
					<%= f.label :title %><br>
					<%= f.text_field :title, class: "col-xs-12" %><br>
					<%= f.label :body, "Option" %><br>
					<%= f.text_area :body, class: "col-xs-12" %>
					<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
				<% end %>
				<%= link_to "Show",book_path(@book) %>
				<span>|</span>
				<%= link_to "Back",books_path %>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
<% end %>
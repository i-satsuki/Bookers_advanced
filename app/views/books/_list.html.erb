<% book = Book.new %>

<div class="new-book-container">
	<h2>New book</h2>
	<%= form_for(book) do |f| %>
		<%= f.label :title %><br>
		<%= f.text_field :title, class: "col-xs-12" %><br>
		<%= f.label :body, "Option" %><br>
		<%= f.text_area :body, class: "col-xs-12" %>
		<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
	<% end %>
</div>
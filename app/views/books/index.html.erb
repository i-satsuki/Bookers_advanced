<div class="container">
	<% if @book.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
	      <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Option</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag book.user, :profile_image, size:'40x40', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td><%= link_to book.title,book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
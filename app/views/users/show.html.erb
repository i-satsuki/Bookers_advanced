<div class="container">
	 <%= render 'layouts/notifications' %>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Option</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
							<td><%= link_to book.title,book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<% if @user.id == current_user.id %>
	<div class="container">
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
			<% if @user.errors.any? %>
			    <div id="error_explanation">
			          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
			          <ul>
			          <% @user.errors.full_messages.each do |message| %>
			                <li><%= message %></li>
			          <% end %>
			          </ul>
			    </div>
			<% end %>
			<div class="form-group has-icon">
				<%= f.label :name %>
				<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
			</div>

			<div class="form-group has-icon">
			  <%= f.label :profile_image %>
			  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>

			<div class="form-group has-icon">
				<%= f.label :introduction %>
				<%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction" %>
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
			</div>

			<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
		<% end %>
	</div>
<% end %>